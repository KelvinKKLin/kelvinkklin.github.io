body{
    color: #212121;
    background-color: #FAFAFA;
    font-family: Lato, Helvetica, sans-serif;
    font-size: 1.6em;
    font-weight: 300;
    line-height: 1.8em;
}
b{
    font-weight:700;
}
.project{
    margin-bottom: 1.3em;
}
.tile{
    height: 1300em;
    margin-bottom: 0.5em;
    border: 0.07em solid #212121;
}
.dropdown-text{
    color: #000000;
    text-decoration: none;
}
.dropdown-text:hover{
    color: #000000;
    text-decoration: underline;
    text-decoration-color: #1565c0;
}
.fa-minus-circle, .fa-plus-circle{
    padding-right: 1em;
}
.no-border{
    border: 0.0em;
}
a[aria-expanded=true] .fa-plus-circle {
    display: none;
}
a[aria-expanded=false] .fa-minus-circle {
    display: none;
}
